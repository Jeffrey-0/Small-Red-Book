<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.NoteActivity"
    android:background="#333"
    >
    <ImageView
        android:id="@+id/iv_note_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#2f2f2f2f"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.92"
        />
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_note_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#2f2f2f2f"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.92"
        android:visibility="gone"
        />
    <VideoView
        android:id="@+id/vv_note_video"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="@id/iv_note_img"
        app:layout_constraintBottom_toBottomOf="@id/iv_note_img"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:id="@+id/iv_return"
        android:background="@drawable/return_white"
        android:layout_margin="12dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:id="@+id/iv_share"
        android:background="@drawable/share"
        android:visibility="gone"
        android:layout_margin="12dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/tv_note_title"
        android:text="偷懒的一天"
        android:textColor="#fff"
        android:layout_margin="10dp"
        android:textSize="22sp"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/tv_note_text"
        app:layout_constraintLeft_toLeftOf="@id/iv_note_img"
        />
    <TextView
        android:id="@+id/tv_note_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/iv_note_img"
        android:maxLines="3"
        android:scrollbars="vertical"
        android:textColor="#fff"
        android:textSize="20dp"
        android:text="12312321432411238sahsdakjfh jdsaklf我改沙发撒的发水电费防守打法考虑是否健康赛季代理费看见爱上了肯定放假啦开始就离开福建省领导看荆防颗粒 "
        android:layout_margin="5dp"
        />
    <ImageView
        android:id="@+id/iv_user_head"
        android:layout_margin="10dp"
        android:background="@drawable/head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@id/tv_note_title"
        app:layout_constraintLeft_toLeftOf="@id/iv_note_img"
        />
    <TextView
        android:id="@+id/tv_user_name"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/iv_user_head"
        android:text="小疯子"
        android:textSize="22sp"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/iv_user_head"
        app:layout_constraintBottom_toBottomOf="@id/iv_user_head"
        app:layout_constraintTop_toTopOf="@id/iv_user_head"
        />
    <TextView
        android:id="@+id/tv_watch"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/iv_user_head"
        android:text="关注"
        android:textSize="22sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#fff"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/tv_user_name"
        app:layout_constraintBottom_toBottomOf="@id/iv_user_head"
        app:layout_constraintTop_toTopOf="@id/iv_user_head"
        />

    <ImageView

        android:id="@+id/iv_comment_open"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/write"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="@id/tv_bottom"
        app:layout_constraintBottom_toBottomOf="@id/tv_bottom"
        app:layout_constraintLeft_toLeftOf="@id/tv_bottom"
        />
    <TextView
        android:id="@+id/tv_commit"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="说点什么..."
        android:textColor="#aaa"
        app:layout_constraintTop_toTopOf="@id/tv_bottom"
        app:layout_constraintBottom_toBottomOf="@id/tv_bottom"
        app:layout_constraintLeft_toRightOf="@id/iv_comment_open"
        />


    <TextView
        android:id="@+id/tv_num_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11"
        android:textSize="20sp"
        android:textColor="#fff"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="@id/tv_bottom"
        app:layout_constraintBottom_toBottomOf="@id/tv_bottom"
        app:layout_constraintRight_toRightOf="@id/tv_bottom"
        />
    <ImageView
        android:id="@+id/iv_message"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/message_white"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="@id/tv_bottom"
        app:layout_constraintBottom_toBottomOf="@id/tv_bottom"
        app:layout_constraintRight_toLeftOf="@id/tv_num_message"
        />

    <TextView
        android:id="@+id/tv_num_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="144"
        android:textSize="20sp"
        android:textColor="#fff"
        app:layout_constraintTop_toTopOf="@id/tv_bottom"
        app:layout_constraintBottom_toBottomOf="@id/tv_bottom"
        app:layout_constraintRight_toLeftOf="@id/iv_message"
        android:layout_marginRight="30dp"
        />
    <ImageView
        android:id="@+id/iv_collect"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/collect"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="@id/tv_bottom"
        app:layout_constraintBottom_toBottomOf="@id/tv_bottom"
        app:layout_constraintRight_toLeftOf="@id/tv_num_collect"
        />

    <TextView
        android:id="@+id/tv_num_love"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="99"
        android:textSize="20sp"
        android:textColor="#fff"
        app:layout_constraintTop_toTopOf="@id/tv_bottom"
        app:layout_constraintBottom_toBottomOf="@id/tv_bottom"
        app:layout_constraintRight_toLeftOf="@id/iv_collect"
        android:layout_marginRight="30dp"
        />
    <ImageView
        android:id="@+id/iv_love"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:background="@drawable/love_white"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="@id/tv_bottom"
        app:layout_constraintBottom_toBottomOf="@id/tv_bottom"
        app:layout_constraintRight_toLeftOf="@id/tv_num_love"
        />

<!--<RelativeLayout-->
<!--    android:id="@+id/rl_comment"-->
<!--    android:layout_width="match_parent"-->
<!--    android:layout_height="50dp"-->
<!--    app:layout_constraintBottom_toBottomOf="parent"-->
<!--    android:background="#2f2f2f"-->
<!--    >-->
    <EditText
        android:visibility="gone"
        android:id="@+id/et_comment"
        android:layout_width="310dp"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_comment_open"
        android:background="@drawable/search_border"
        android:layout_alignParentBottom="true"
        android:gravity="center"
         />
    <TextView
        android:id="@+id/tv_send"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="发送"
        android:background="#2f2f2f2f"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        android:textSize="22sp"
        android:visibility="gone"
        />


<!--</RelativeLayout>-->

    <LinearLayout
        android:id="@+id/ll_comment"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="#fff"
        android:orientation="vertical"
        >
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="10dp"
           >
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="评论列表"
               android:textSize="20sp"
               android:gravity="center"
               />
           <ImageView
               android:id="@+id/iv_comment_close"
               android:background="@drawable/close"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:layout_alignParentRight="true"
               />
       </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>