<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    >
    <ImageView
        android:id="@+id/iv_comment_user_head"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="40dp"
        android:background="@drawable/head"
        android:layout_height="40dp"/>
    <TextView
        android:id="@+id/tv_comment_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/iv_comment_user_head"
        app:layout_constraintTop_toTopOf="parent"
        android:text="小疯子"
        android:textColor="#888"
        />
    <TextView
        android:id="@+id/tv_comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="2019-11-03"
        android:textColor="#888"
        />
    <TextView
        android:id="@+id/tv_comment_text"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_comment_user_name"
        app:layout_constraintLeft_toLeftOf="@id/tv_comment_user_name"
        android:padding="5dp"
        android:textColor="#2f2f2f"
        android:text="好帅"
        />

</androidx.constraintlayout.widget.ConstraintLayout>