<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.ceshi">
<TextView
    android:id="@+id/tv_cs"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    android:text="没有数据"
    />
    <Button
        android:id="@+id/bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示本地图片"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/iv_pic"
        />

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="200dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_cs"
        app:layout_constraintTop_toBottomOf="@id/tv_cs"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="200dp"/>
    <VideoView
        android:id="@+id/vv"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/bt"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/bt_play"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/vv"
        android:layout_height="wrap_content"
        android:text="播放"
        app:layout_constraintLeft_toLeftOf="@id/vv"
        />
    <Button
        android:id="@+id/bt_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂停"
        app:layout_constraintTop_toBottomOf="@id/vv"
        app:layout_constraintRight_toRightOf="@id/vv"
        />
<ImageView
    android:id="@+id/iv_vv"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:background="@drawable/play"
    app:layout_constraintTop_toTopOf="@id/iv_pic"
    app:layout_constraintRight_toRightOf="@id/iv_pic"
    android:visibility="gone"
    android:layout_margin="10dp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>