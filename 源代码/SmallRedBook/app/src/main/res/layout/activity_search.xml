<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.SearchActivity"
    android:background="#fff"
    >
<ImageView
    android:id="@+id/iv_black"
    android:background="@drawable/return_black"
    android:layout_margin="12dp"
    android:layout_width="30dp"
    android:layout_height="30dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    />


    <EditText
        android:layout_margin="10dp"
        android:id="@+id/ET_search"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:padding="5dp"
        android:gravity="center"
        android:background="@drawable/search_border"
        app:layout_constraintLeft_toRightOf="@id/iv_black"
        app:layout_constraintRight_toLeftOf="@id/tv_search"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:id="@+id/IV_serach"

        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/search"
        app:layout_constraintLeft_toLeftOf="@id/ET_search"
        app:layout_constraintTop_toTopOf="@id/ET_search"
        />
    <TextView
        android:id="@+id/tv_search"
        android:layout_margin="10dp"

        android:layout_width="30dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:text="搜索"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/tv_line"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/ET_search"
        android:background="#222"
        />
    <TextView
        android:layout_margin="10dp"
        android:id="@+id/tv_histroy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="历史记录"
        android:visibility="gone"
        android:textColor="#222"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_line"
        />
    <ImageView
        android:visibility="gone"
        android:layout_margin="10dp"
        android:id="@+id/iv_delete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/delete"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_line"
        />
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_histroy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_histroy"
        />

